
@{
}
<h2>Update Employee</h2>
<h4>Employee ID: @ViewBag.ListOfEmployees[0].EmployeeId </h4>

<form action="UpdateAnEmployee" method="Post">

    <input type="hidden" name="employeeId" value="@ViewBag.ListOfEmployees[0].EmployeeId" />

    Last Name <br />
    <input type="text" id="lastName" name="lastName" value="@ViewBag.ListOfEmployees[0].LastName" /> <br />

    First Name <br />
    <input type="text" id="firstName" name="firstName" value="@ViewBag.ListOfEmployees[0].FirstName" /> <br />

    Title <br />
    <input type="text" id="title" name="title" value="@ViewBag.ListOfEmployees[0].Title" /> <br />

    Title of Courtesy <br />
    <input type="text" id="titleOfCourtesy" name="titleOfCourtesy" value="@ViewBag.ListOfEmployees[0].TitleOfCourtesy" /> <br />

    Birth Date <br />
    <input type="text" id="birthDate" name="birthDate" value="@ViewBag.ListOfEmployees[0].BirthDate" /> <br />

    Hire Date <br />
    <input type="text" id="hireDate" name="hireDate" value="@ViewBag.ListOfEmployees[0].HireDate" /> <br />

    Address <br />
    <input type="text" id="address" name="address" value="@ViewBag.ListOfEmployees[0].Address" /> <br />

    City <br />
    <input type="text" id="city" name="city" value="@ViewBag.ListOfEmployees[0].City" /> <br />

    Region <br />
    <input type="text" id="region" name="region" value="@ViewBag.ListOfEmployees[0].Region" /> <br />

    Postal Code <br />
    <input type="text" id="postalCode" name="postalCode" value="@ViewBag.ListOfEmployees[0].PostalCode" /> <br />

    Country <br />
    <input type="text" id="country" name="country" value="@ViewBag.ListOfEmployees[0].Country" /> <br />

    Home Phone <br />
    <input type="text" id="homePhone" name="homePhone" value="@ViewBag.ListOfEmployees[0].HomePhone" /> <br />

    Extension <br />
    <input type="text" id="extension" name="extension" value="@ViewBag.ListOfEmployees[0].Extension" /> <br />

    Notes <br />
    <input type="text" id="notes" name="notes" value="@ViewBag.ListOfEmployees[0].Notes" /> <br />

    Reports To <br />
    <input type="text" id="reportsTo" name="reportsTo" value="@ViewBag.ListOfEmployees[0].ReportsTo" /> <br />

    <br />

    <input type="submit" />
    <input type="reset" />
</form>